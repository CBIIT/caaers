<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
    	
    <bean id="dataSource" class="gov.nih.nci.cabig.caaers.tools.spring.DeferredLoadingFactoryBean">
        <property name="beanNames">
            <list>
                <value>localPoolDataSource</value>
            </list>
        </property>
    </bean>

    <bean id="localPoolDataSource" lazy-init="true" class="org.apache.commons.dbcp.BasicDataSource"
        p:driverClassName="s[datasource.driver]"
        p:maxActive="s[caaers.cp.maxActive:75]"
        p:minIdle="s[caaers.cp.minIdle:15]"
        p:initialSize="s[caaers.cp.initialSize:10]"
        p:maxWait="s[caaers.cp.maxWait:10000]"
        p:removeAbandoned="true"
        p:removeAbandonedTimeout="120"
        p:logAbandoned="true"
        p:testWhileIdle="true"
        p:testOnBorrow="true"
        p:testOnReturn="false"
        p:timeBetweenEvictionRunsMillis="s[caaers.cp.timeBetweenEvictionRunsMillis:60000]"
        p:minEvictableIdleTimeMillis="s[caaers.cp.minEvictableIdleTimeMillis:120000]"
        p:validationQuery="select release from bering_version where release = 1"
        p:url="s[datasource.url]"
        p:username="s[datasource.username]"
        p:password="s[datasource.password]"/>
        

    <bean id="beringMigrator" class="edu.northwestern.bioinformatics.bering.servlet.DeployedMigrator">
        <property name="dataSource" ref="dataSource" />
    </bean>
	
</beans>
