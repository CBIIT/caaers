<ivysettings>
	<settings defaultResolver="sd-resolver" validate="false" />

	<resolvers>
		<chain name="sd-resolver" returnFirst="true" dual="true">
		
            <!-- Local Ivy Cache -->
            <filesystem name="ivy-cache" local="true" >
                  <ivy pattern="${user.home}/.ivy2/cache/[organisation]/[module]/ivy-[revision].xml"/>
                  <artifact pattern="${user.home}/.ivy2/cache/[organisation]/[module]/[type]s/[artifact]-[revision].[ext]"/>
            </filesystem>

            <url name="spring-repo-nightly-snapshots" m2compatible="true">
                <ivy pattern="http://static.springframework.org/maven2-snapshots/[organisation]/[module]/ivy-[revision].xml"/>
                <artifact pattern="http://static.springframework.org/maven2-snapshots/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]"/>
            </url>

            <ibiblio name="mvn.repo" root="http://repo1.maven.org/maven2/" m2compatible="true" changingPattern=".*SNAPSHOT" />
            <ibiblio name="ibiblio" root="http://mirrors.ibiblio.org/pub/mirrors/maven2/" m2compatible="true"/>
            <ibiblio name="maven2-codehaus-mule" m2compatible="true" root="http://dist.codehaus.org/mule/dependencies/maven2" changingPattern=".*SNAPSHOT" />
            <ibiblio name="maven2-codehaus" m2compatible="true" root="http://repository.codehaus.org" changingPattern=".*SNAPSHOT"/>
            <ibiblio name="maven2-http" m2compatible="true" root="http://repository.jboss.com/maven2" changingPattern=".*SNAPSHOT"/>
            <ibiblio name="openqa" m2compatible="true" root="http://archiva.openqa.org/repository/releases/" changingPattern=".*SNAPSHOT"/>
            <ibiblio name="java.net" root="http://download.java.net/maven/1/" pattern="[organization]/jars/[module]-[revision].[ext]" />
            <ibiblio name="java.net2" root="http://download.java.net/maven/2/" m2compatible="true"/>            
        </chain>

	</resolvers>
</ivysettings>

