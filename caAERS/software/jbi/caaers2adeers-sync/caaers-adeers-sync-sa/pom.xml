<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>parent</artifactId>
    <groupId>gov.nih.nci.cabig.caaers2adeers</groupId>
    <version>2.7-M12</version>
  </parent>
  <groupId>gov.nih.nci.cabig.caaers2adeers</groupId>
  <artifactId>caaers-adeers-sync-sa</artifactId>
  <version>${c2aVersion}</version>
  <packaging>jbi-service-assembly</packaging>
  <name>Apache ServiceMix::Service Assembly</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.4.3</version>
        <configuration>
          <encoding>UTF-8</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.servicemix.tooling</groupId>
        <artifactId>jbi-maven-plugin</artifactId>
        <version>4.5</version>
        <extensions>true</extensions>
        <configuration>
          <type>service-assembly</type>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
  	<dependency>
  		<groupId>gov.nih.nci.cabig.caaers2adeers</groupId>
  		<artifactId>core-camel-su</artifactId>
  		<version>${c2aVersion}</version>
  	</dependency>
  	<dependency>
  		<groupId>gov.nih.nci.cabig.caaers2adeers</groupId>
  		<artifactId>adeers-wsbc-su</artifactId>
          <version>${c2aVersion}</version>
  	</dependency>
  	<dependency>
  		<groupId>gov.nih.nci.cabig.caaers2adeers</groupId>
  		<artifactId>caaers-wsbc-su</artifactId>
          <version>${c2aVersion}</version>
  	</dependency>

  </dependencies>
</project>
