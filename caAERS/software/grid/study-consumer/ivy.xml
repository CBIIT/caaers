			<!--  Castor -->
			<dependency org="castor" name="castor" rev="0.9.9"/>

            <!-- Servlet & JSP -->
            <dependency org="javax.servlet" name="servlet-api" rev="2.4" conf="build->default(*);test->default(*)"/>



        <!-- Test/Runtime dependencies -->
        <dependency org="gov.nih.nci.cabig.caaers" name="caaers-core" rev="latest.integration"  conf="test->test" />

        </dependencies>
</ivy-module>
