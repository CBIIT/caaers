<project name="caaers-essae-impl" default="compile" xmlns:ivy="antlib:org.apache.ivy.ant">
	<property name="parent.dir" value="${basedir}/../.." />
	<property file="${parent.dir}/build.properties" />
	<import file="${parent.dir}/common.xml"/>
	
	
	<target name="module-specific-flow" depends="resolve,copy-ae-grid,common.aspectj-compile" />
	
	<!-- ========================================================================
		target : jar-test
			Will call aspectj-compile of test classes then delegates to common jar-test
	============================================================================-->	
	<target name="jar-test" depends="common.aspectj-compile-test, common.jar-test" />
	

	
	<!-- this is a temp fix till we publish ae enter prise service jars , check them into lib folder if you have new stubs -->

	<target name="copy-ae-grid">
		<copy todir="${lib.dir}">
			<fileset dir="lib" includes="**/*.*">
				<exclude name=".svn"/>
			</fileset>
		</copy>
	</target>
	
	
	
</project>
