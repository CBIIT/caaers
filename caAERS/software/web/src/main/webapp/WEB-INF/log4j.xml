<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  
  
  <!-- for testing, purge the log on each run -->
  <appender name="file" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="${catalina.home}/logs/caaers.log"/>
	<param name="maxBackupIndex " value="5"/>
	<param name="threshold" value="FATAL"/>
	<param name="maxFileSize" value="30MB"/> 
    <param name="append" value="false"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="conversionPattern" value="%d [%15t] %-5p %c %x: %m%n"/>
    </layout>
  </appender>
  
  <!-- disable really verbose logging from libraries.  Switch to debug if necessary. 
  <logger name="org.hibernate"><level value="error"/></logger>
  <logger name="org.semanticbits"><level value="error"/></logger>
  <logger name="org.springframework"><level value="error"/></logger>
  <logger name="org.springframework.orm.hibernate3"><level value="error"/></logger>
  <logger name="org.apache"><level value="error"/></logger>
  <logger name="com"><level value="error"/></logger>
  <logger name="gov"><level value="error"/></logger>
  <logger name="gov.nih.nci"><level value="error"/></logger>
  <logger name="org"><level value="error"/></logger>
  <logger name="org.quartz"><level value="error"/></logger>
  <logger name="gov.nih.nci.cabig.caaers"><level value="error"/></logger>
  <logger name="gov.nih.nci.cabig.ctms"><level value="error" /></logger>
  <logger name="edu"><level value="error"></level></logger>
  <logger name="edu.northwestern.bioinformatics"><level value="error"></level></logger>
  <logger name="edu.northwestern.bioinformatics.bering"><level value="error" /></logger>
  <logger name="gov.nih.nci.cabig.caaers.resolver"><level value="info" /></logger>
  -->
  
  <root>
    <priority value="FATAL"/>
    <appender-ref ref="file"/>
  </root>
</log4j:configuration>
