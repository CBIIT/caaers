<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  
  <!-- for testing, purge the log on each run -->
  <appender name="caaers-webapp-log" class="org.apache.log4j.RollingFileAppender">
	<param name="maxBackupIndex" value="20"/>
    <param name="file" value="${catalina.home}/logs/caaers.log"/>
	<param name="threshold" value="ERROR"/>
    <param name="append" value="true"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="conversionPattern" value="caAERS-webapp-%d [%15t] %-5p %c %x: %m%n"/>
    </layout>
  </appender>
	 
	<logger name="gov.nih.nci.cabig.caaers.resolver"><level value="debug"/></logger>	 
	   	
  <root>
    <priority value="error"/>
    <appender-ref ref="caaers-webapp-log"/>
  </root>
</log4j:configuration>