<project name="run-tools file" basedir="." default="runClient">
     <target name="runClient" depends="checkGlobus, defineClasspaths" description="Run the sample Client">
     	<property name="service.url" value="https://localhost:8443/wsrf/services/cagrid/ProtocolService" />
     	<property name="proxy.file" value="proxy.txt" />
     	<property name="input.file" value="test/resources/registration_eg.xml" />
        <echo message="Connecting to service: ${service.url}" />
        <java classname="gov.nih.nci.cabig.caaers.grid.client.ProtocolServiceClient" classpathref="run.classpath" fork="yes">
            <jvmarg value="-DGLOBUS_LOCATION=${ext.globus.dir}" />

            <arg value="${service.url}" />
        	<arg value="${proxy.file}" />
        	<arg value="${input.file}" />
        </java>
    </target>
</project>