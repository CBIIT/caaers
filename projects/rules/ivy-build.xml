<project name="caaers-rules" default="compile">
	<property name="parent.dir" value="${basedir}/.." />
	<property file="${parent.dir}/build.properties" />
	<import file="${parent.dir}/common.xml" />
	<target name="module-specific-flow" depends="resolve,generate-jaxb,common.aspectj-compile">
		<echo>overwriting rules module flow...</echo>
	</target>
	
	<!-- ========================================================== 
	          target: compile-test              
	    =========================================================== -->
	    <target name="compile-test" depends="resolve-test" unless="no.compile-test"	description="--> compile the test classes of this project">
	    	<echo message="(Overriden)Executing in ${ant.project.name}" />
	    	<copy todir="${test.classes.dir}">
	    		<fileset dir="${main.src.resources}" includes="**/rules_reporting*.xml">
	    		</fileset>
	    	</copy>
	    	<copy-resources src="${test.src.resources}" dest="${test.classes.dir}" filter="true"/>
	        <javac srcdir="${test.src}" destdir="${test.classes.dir}" classpathref="test.classpath"  debug="true" source="1.5"  target="1.5" />
	    	<property name="no.compile-test" value="true" />
	    </target>
</project>
