<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	 <bean id="jbpmConfiguration" class="org.springmodules.workflow.jbpm31.LocalJbpmConfigurationFactoryBean">
	 
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="configuration" value="classpath:/jbpm.cfg.xml"/>
        
       <property name="processDefinitions">
            <list>
                <ref local="routineFlow"/>
            </list>
        </property>
        
        <property name="createSchema" value="false"/>
        
    </bean>
    
     <bean id="jbpmTemplate" class="org.springmodules.workflow.jbpm31.JbpmTemplate">
    			<constructor-arg index="0" ref="jbpmConfiguration" />
    			<constructor-arg index="1" ref="routineFlow" />
	</bean> 
	
   <bean id="nodeSkipActionHandler" class="gov.nih.nci.cabig.caaers.workflow.handler.NodeSkipActionHandler">
   		<property name="workflowService" ref="workflowService"/>
   </bean>
   
   <bean id="workflowService"
        class="gov.nih.nci.cabig.caaers.service.workflow.WorkflowServiceImpl">
        <property name="jbpmConfiguration" ref="jbpmConfiguration"/>
        <property name="routineFlowProcessDefinition" ref="routineFlow"/>
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="caaersJavaMailSender" ref="mailer"/>
        <property name="possibleTransitionsResolver" ref="possibleTransitionsResolver"/>
        <property name="workflowConfigDao" ref="workflowConfigDao"/>
   </bean>
   
   <bean id="possibleTransitionsResolver" class="gov.nih.nci.cabig.caaers.workflow.PossibleTransitionsResolver"/>
    
   	<!--  
   		The workflow definition for Routine Flow 
   	-->
	<bean id="routineFlow" class="org.springmodules.workflow.jbpm31.definition.ProcessDefinitionFactoryBean">
        <property name="definitionLocation" value="classpath:/workflow/routineflow/processdefinition.xml"/>
    </bean>
	  
</beans>