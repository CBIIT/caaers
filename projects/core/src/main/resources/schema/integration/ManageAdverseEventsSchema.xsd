<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://webservice.caaers.cabig.nci.nih.gov/adverseeventcriteria"
    xmlns="http://webservice.caaers.cabig.nci.nih.gov/adverseeventcriteria"
    xmlns:ae="http://webservice.caaers.cabig.nci.nih.gov/adverseevent"
    elementFormDefault="unqualified">
    
    <xs:import namespace="http://webservice.caaers.cabig.nci.nih.gov/adverseevent"
        schemaLocation="AdverseEventSchema.xsd"/>    
    
    
    <xs:element name="ImportAdverseEvents">
        <xs:annotation>
            <xs:documentation> The top level (typically root) element. Allows the definition of
                default values for all nested bean definitions. </xs:documentation>
        </xs:annotation>
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="ae:adverseEvents"/>
                <xs:element ref="criteria"/>
            </xs:sequence>
        </xs:complexType>        
    </xs:element>
     <xs:element name="criteria" type="Criteria"/>   

 	<xs:complexType name="Criteria">
        <xs:sequence>
        	<xs:element name="participantIdentifier" type="CustomStringType" minOccurs="1"/>
        	<xs:element name="studyIdentifier" type="CustomStringType" minOccurs="1"/>
        	<xs:element name="course" type="CourseType" minOccurs="1"/>
        </xs:sequence>
    </xs:complexType>         	


    <xs:complexType name="CourseType">
                <xs:sequence>
                    <xs:element name="startDateOfFirstCourse" type="xs:date" minOccurs="1"/>
                    <xs:element name="startDateOfThisCourse" type="xs:date" minOccurs="1"/>
                    <xs:element name="endDateOfThisCourse" type="xs:date"/>
                    <xs:element name="treatmentType" type="CustomStringType" minOccurs="1"/>
                    <xs:element name="cycleNumber" type="xs:integer"/>
                    <xs:choice>
	                    <xs:element name="treatmentAssignment" type="TreatmentAssignmentType" minOccurs="1"/>
	                    <xs:element name="otherTreatmentAssignmentDescription" type="CustomStringType" minOccurs="1"/>
                    </xs:choice>
                </xs:sequence> 
    </xs:complexType>
    <xs:complexType name="TreatmentAssignmentType">
                <xs:sequence>
                    <xs:element name="code" type="CustomStringType" minOccurs="1"/>
                    <xs:element name="doseLevelOrder" type="xs:string"/>
                    <xs:element name="description" type="xs:string"/>
                    <xs:element name="comments" type="xs:string"/>
                </xs:sequence> 
    </xs:complexType> 
    <xs:simpleType name="CustomStringType">
        <xs:restriction base="xs:normalizedString">
           <xs:minLength value="1"/>
           <xs:whiteSpace value="collapse"/> 
        </xs:restriction>
    </xs:simpleType>
