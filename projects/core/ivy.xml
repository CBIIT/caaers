<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="1.4">
		
    	<info organisation="gov.nih.nci.cabig.caaers"
          	module="caaers-core"
          	status="integration" revision="${caaers.version}"/>
        
        <configurations>
        	<conf name="default" visibility="public" extends="publish,runtime" 
        		description="Dependencies needed for default setting"  />
        	<conf name="build" visibility="public" 
        		description="Dependencies required for build time, all classpath should have this"/>
        	<conf name="publish" visibility="public" 
        		description="Dependencies along with this module is published in repository" />
        	<conf name="distGrid" visibility="public"  extends="publish"
        		description="Dependencies that are required in grid distribution of this module" />
        	<conf name="dist" visibility="public"  extends="publish"
        		description="Dependencies needed for standalone distribution" />
        	<conf name="runtime" visibility="public"
        		description="The dependencies that are needed for runtime" extends="build" />
        	<conf name="test" visibility="public" 
        		description="Dependencies needed for testing purposes"/>
        </configurations>
        
        <!--  Items to be published  -->
         <publications>
    		<artifact name="${ivy.module}" conf="publish" type="jar" ext="jar"/>
    		<artifact name="${ivy.module}-tests" conf="test" type="jar" ext="jar"/>
  		</publications>
       
       
        <dependencies  defaultconfmapping="build->master(*);runtime->runtime(*),master(*);dist->master(*),runtime(default);distGrid->master(*),runtime(default)"  >
			<exclude conf="*" name="cglib" />
			<exclude conf="*" name="asm-attrs" />
			
			<!-- caAERS module dependencies -->
			<dependency org="gov.nih.nci.cabig.caaers" name="caaers-core-bootstrap" rev="latest.integration" 
				conf="build->default;runtime->default;dist->dist;distGrid->distGrid"/>
			
			<!--  Spring and Spring Modules -->
        	<dependency org="org.springframework" name="spring" rev="2.0.2" force="true"/>
        	<dependency org="org.springframework" name="spring-context" rev="2.0.2" force="true" />
        	<dependency org="org.springframework" name="spring-dao" rev="2.0.2" force="true" />
        	<dependency org="org.springframework" name="spring-jdbc" rev="2.0.2" force="true" />
        	<dependency org="org.springframework" name="spring-support" rev="2.0.2" force="true" />
        	<dependency org="org.springframework" name="spring-remoting" rev="2.0.2" force="true" />
        	<dependency org="org.springframework" name="spring-web" rev="2.0.2" force="true" />
        	<dependency org="org.springframework" name="spring-webmvc" rev="2.0.2" force="true" />
			<dependency org="org.acegisecurity" name="acegi-security" rev="1.0.3" />

			<!--  Commons Jar (Apache/NW) -->
        	<dependency org="commons-collections" name="commons-collections" rev="3.2" />
        	<dependency org="commons-lang" name="commons-lang" rev="2.3" />
        	<dependency org="commons-logging" name="commons-logging" rev="1.1" />
			<dependency org="net.sourceforge.collections" name="collections-generic" rev="4.01" />
			<dependency org="commons-beanutils" name="commons-beanutils" rev="1.7.0" />
			<dependency org="edu.northwestern.bioinformatics" name="core-commons" rev="77" />
			
        	<!--  Hibernate/Supporting Jars -->
        	<dependency org="org.hibernate" name="hibernate" rev="3.2.1.ga">
        		<exclude conf="*" name="cglib" />
        		<exclude conf="*" name="asm" />
        		<exclude conf="*" name="asm-attrs" />
        	</dependency>
 			<dependency  org="cglib" name="cglib-nodep" rev="2.1_3" />
 			<dependency org="org.hibernate" name="hibernate-annotations" rev="3.2.1.ga" />
			
			<!--  XML supporting JARS -->
			<dependency org="org.jibx"  name="jibx-run" rev="1.0.1" />
        	<dependency org="org.jibx"  name="jibx-bind" rev="1.0.1" />
        	<dependency org="org.jibx" name="xsd2jibx" rev="0.2a-hack"/>
        	<dependency org="castor" name="castor" rev="0.9.9"/>
        	<dependency org="jdom" name="jdom" rev="1.0" />
        	<dependency org="org.apache.xmlgraphics" name="fop" rev="0.93" />
        	
        	<!-- XStream dependencies -->
			<dependency org="com.thoughtworks.xstream" name="xstream" rev="1.2.1" />
			<dependency org="xpp3" name="xpp3" rev="1.1.3.4.O" />

			<!-- Jaxb dependencies -->
			<dependency org="jaxb" name="jaxb-api" rev="2.0-SNAPSHOT"/>
			<dependency org="jaxb" name="jaxb-impl" rev="2.0-SNAPSHOT"/>  
			<dependency org="jaxb" name="jaxb-xjc" rev="2.0-SNAPSHOT"/>
			<dependency org="xjc-plugin" name="collection-setter-injector" rev="1.0"/>
			
			<!-- XFire Jars -->
			<dependency org="org.codehaus.xfire" name="xfire-jaxb2" rev="1.2.6" force="true" />
			<dependency org="org.codehaus.xfire" name="xfire-aegis" rev="1.2.6" force="true"/>
			<dependency org="org.codehaus.xfire" name="xfire-core" rev="1.2.6"  force="true"/>
			<dependency org="xfire" name="xfire-jsr181-api" rev="1.0-M1" force="true" />
			<dependency org="org.codehaus.xfire" name="xfire-spring" rev="1.2.6" force="true" />
			<dependency org="org.codehaus.xfire" name="xfire-annotations" rev="1.2.6" force="true" />
			<dependency org="org.codehaus.xfire" name="xfire-xmlbeans" rev="1.2.6" force="true" />
			<dependency org="org.codehaus.xfire" name="xfire-java5" rev="1.2.6" force="true" />
			
			<!-- JSRs -->
			<dependency org="jsr94" name="jsr94" rev="1.1" />
			<dependency org="javax.xml.bind" name="jaxb-api" rev="2.1">
				<exclude org="jsr173" name="javax.xml"/>
			</dependency>
			<dependency org="javax.xml.bind" name="jsr173_api" rev="1.0" />
			
        	        	
        	
        	<dependency org="org.apache.geronimo.specs"  name="geronimo-jms_1.1_spec" rev="1.1" />
        	<dependency org="jboss"  name="jboss-jsr77" rev="3.2.3" />
        	<dependency org="org.apache.activemq" name="activemq-core" rev="4.1.1" conf="build;runtime;dist" />
        	<dependency org="backport-util-concurrent" name="backport-util-concurrent" rev="2.1" force="true" /> 
        	<dependency org="freemarker" name="freemarker" rev="2.3.4" />
        	
        	<!--  Quartz modules -->
        	<dependency org="opensymphony" name="quartz-all" rev="1.6.0" />
        	
        	<!-- TODO: Check if Grid -->
        	<dependency org="gov.nih.nci.caxchange" name="caXchangeRequestProcessor-common" rev="1.0" /> 
        	<dependency org="gov.nih.nci.caxchange" name="caXchangeRequestProcessor-stubs" rev="1.0" />
        	<dependency org="gov.nih.nci.caxchange" name="caXchangeRequestProcessor-client" rev="1.0" />
        	<dependency org="gov.nih.nci" name="c3pr-esb-client" rev="1.0" />
        	<dependency org="gov.nih.nci.cagrid" name="cagrid-cds-client" rev="1.2" />
        	<dependency org="gov.nih.nci.cagrid" name="cagrid-cds-common" rev="1.2" />
        	<dependency org="gov.nih.nci.cagrid" name="cagrid-cds-stubs" rev="1.2" />
        	<dependency org="gov.nih.nci.cagrid" name="cagrid-casclient" rev="2.0.11" />
        	<!-- TODO : Check if Grid END-->

			<!--  DB related supporting JARS -->        	
        	<dependency org="commons-dbcp" name="commons-dbcp" rev="1.2.1" >
        		<exclude name="xml-apis" conf="*"/>
        		<exclude name="xerces" conf="*"/>
        	</dependency>
        	<dependency org="postgresql" name="postgresql" rev="8.2-504.jdbc3" />
        	<dependency org="hsqldb" name="hsqldb" rev="1.8.0.7" />
        	<dependency org="oracle" name="ojdbc14" rev="10.2.0.2" />
        	
        	 <!-- Groovy (used by bering) needs this version of asm, but hibernate is pulling in 1.5.3 -->
        	<dependency org="asm" name="asm" rev="2.2.3" />
        	<dependency org="edu.northwestern.bioinformatics"  name="bering" rev="0.6.1">
        		<exclude name="spring" conf="*" />
        		<exclude name="spring-mock" conf="*" />
        	</dependency>
        	
        	
        	<dependency org="javax.mail" name="mail" rev="1.4" />
        	<dependency org="javax.activation" name="activation" rev="1.1" />
        	
        	<!-- compile only dependencies -->
			<dependency org="org.globus" name="cog-jglobus" rev="1.2" conf="build;runtime;dist" />

			<!-- CTMS commons dependencies -->
			<dependency org="gov.nih.nci.cabig.ctms" name="ctms-commons-base" rev="${ctms.version}" transitive="false"/>
			<dependency org="gov.nih.nci.cabig.ctms" name="ctms-commons-core" rev="${ctms.version}"  transitive="false"/>
			<dependency org="gov.nih.nci.security.acegi" name="acegi-csm" rev="${ctms.version}" transitive="true" />
			<dependency org="gov.nih.nci.security.acegi" name="acegi-grid" rev="${ctms.version}" transitive="true" />
			
			<dependency org="gov.nih.nci.cabig.ctms" name="ctms-commons-lang" rev="${ctms.version}" transitive="false" />
			<dependency org="gov.nih.nci.cabig.ctms" name="ctms-commons-testing-uctrace" rev="${ctms.version}" />
			
						
			
			<!-- Apache POI dependencies -->
			<dependency org="org.apache.poi" name="poi" rev="3.0-FINAL"/>
			
			<!-- Test/Runtime dependencies -->
			<dependency org="dbunit" name="dbunit" rev="2.1" conf="build->default;test->default"/>
						
			<!-- Test only dependencies -->
			<dependency org="org.springframework" name="spring-mock" rev="2.0.2" force="true" conf="test->default" />        	
        	<dependency org="edu.northwestern.bioinformatics" name="core-commons-testing" rev="77" conf="test->default" />
        	<dependency org="org.easymock" name="easymockclassextension" rev="2.2.1" conf="test->default" />
        	<dependency org="junit" name="junit" rev="3.8.1" conf="test->default"/>
			<dependency org="gov.nih.nci.cabig.ctms" name="ctms-commons-testing-all" rev="0.8" conf="test->default"/>
			<dependency org="cobertura" name="cobertura" rev="1.8" conf="test->default(*)"/>

        </dependencies>
</ivy-module>
